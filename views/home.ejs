<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/style.css">
    <title>Home</title>
</head>
<body>
     <header>
        <img src="/assets/book-open.svg" alt="">
        <div>
            <button><img src="/assets/languages.svg" alt=""></button>
            <button><img src="/assets/coffee.svg" alt=""></button>
        </div>
     </header>
     <main>
        <div id="booki">
            <img src="/assets/book-open.svg" alt="">
            <h3>booki</h3>
        </div>
        <div id="searchHome">   
            <select name="opcao" id="searchOption">
                <option value="optionBook">Book</option>
                <option value="optionAuthor">Author</option>    
                <option value="optionSubject">Subject</option>
              </select>
            <input type="text" id="inputText" name="inputText" placeholder="Search books" required>
            <button><img src="/assets/search.svg" alt=""></button>
        </div>
        <div id="showcase">
            <% for(var i = 0; i < books.length; i++) { %>
                <% if(i <= 2 && i % 2 == 0){ %>
                    <div class="showcaseBook showcaseBook1to3" >
                        <img src=<%= books[i].cover %> alt="">
                        <div class="showcaseBookText">
                            <h1 class="showcaseBookTitle"><%= books[i].title %><br></h1>
                            <span><%= books[i].description %></span>
                        </div>
                    </div>
                  <% } else if (i <= 2 && i % 2 != 0) { %>  
                    <div class="showcaseBook showcaseBook1to3" >
                        <div class="showcaseBookText">
                            <h1 class="showcaseBookTitle"><%= books[i].title %><br></h1>
                            <span><%= books[i].description %></span>
                        </div>
                        <img src=<%= books[i].cover %> alt="">
                    </div>
                    
                <% } else if (i >= 3 && i % 2 == 0) { %> 
                    <div class="showcaseBook showcaseBook4to9">
                        <img src=<%= books[i].cover %> alt="">
                        <div class="showcaseBookText">
                            <h1 class="showcaseBookTitle"><%= books[i].title %><br></h1>
                            <span><%= books[i].description %></span>
                        </div>
                    </div>
                <% } else if (i >= 3 && i % 2 != 0) { %> 
                    <div class="showcaseBook showcaseBook4to9">
                        <div class="showcaseBookText">
                            <h1 class="showcaseBookTitle"><%= books[i].title %><br></h1>
                            <span><%= books[i].description %></span>
                        </div>
                        <img src=<%= books[i].cover %> alt="">
                    </div>
                <% } %>               
            <% } %>
        </div>
     </main>
     <footer>
        <div>
            <div id="contact">
                <span>contact</span>
                <img src="/assets/github.svg" alt="">
            </div>
            <div id="donation">
                <span>donation</span>
                <img src="/assets/bmclogo.png" alt="">
                <img src="/assets/kofi.png" alt="">
                <img src="/assets/paypal.png" alt="">
            </div>
        </div>
        <span>Copyright Â© 2024 Carvolio</span>
     </footer>
</body>
<script src="/scripts/home.js"></script>
</html>
